<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:background="@drawable/color_background_item"
    tools:ignore="ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_small">

        <ImageView
            android:id="@+id/track_img_art"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/track_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_large"
            app:layout_constraintStart_toEndOf="@id/track_img_art"
            app:layout_constraintTop_toTopOf="@id/track_img_art" />

        <TextView
            android:id="@+id/track_tv_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_small"
            app:layout_constraintBottom_toBottomOf="@id/track_img_art"
            app:layout_constraintStart_toEndOf="@id/track_img_art" />

        <TextView
            android:id="@+id/track_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:text="@string/default_time"
            app:layout_constraintBottom_toBottomOf="@id/track_img_art"
            app:layout_constraintEnd_toStartOf="@id/track_btn_menu"
            app:layout_constraintTop_toTopOf="@id/track_img_art" />

        <ImageView
            android:id="@+id/track_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/padding_small"
            android:src="@android:drawable/ic_menu_add"
            app:layout_constraintBottom_toBottomOf="@id/track_img_art"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/track_img_art" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>